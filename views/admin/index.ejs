<link rel="stylesheet" type="text/css" href="<%= styleLink %>">
<% include ../partials/header %>
 <div class="row">
 	<div class="col s12 m8 offset-m2">
	   <div class="card">
	    <div class="card-tabs">
	      <ul class="tabs tabs-fixed-width">
	        <li class="tab"><a class="active" href="#skills">Skills</a></li>
	        <li class="tab"><a href="#projects">Projects</a></li>
	      </ul>
	    </div>
	    <div class="card-content grey lighten-4">
	      <div id="skills">
			<ul class="collection">
			
				<% skills.forEach(function(skill){ %>
					<li class="collection-item avatar">
						<img src="<%= skill.skillImageUrl %>" alt="" class="circle">
						<p class="title"><%= skill.skillName %></p>
						<p><%= skill.skillDescription %></p>
						<div class="row button-content">
							<a type="submit" href="/admin/skills/<%= skill._id %>/edit" class="col s6 waves-effect waves-light btn blue accent-4">Edit</a>
							<form class="col s6" action="/admin/skills/<%= skill._id %>?_method=DELETE" method="POST">
								<button type="submit" class="waves-effect waves-light btn red accent-4">Delete</button>
							</form>
						</div>
					</li>
				<% }) %>
				
			</ul>
	      	
	      </div>

	      <div id="projects">
	      	<ul class="collection">
				<% projects.forEach(function(project){ %>
					<li class="collection-item avatar">
						<img src="<%= project.projectImageUrl %>" alt="" class="circle">
						<p class="title"><%= project.projectName %></p>
						<p><%= project.projectDescription %></p>
						<div class="row button-content">
							<a type="submit" href="/admin/projects/<%= project._id %>/edit" class="col s6 waves-effect waves-light btn blue accent-4">Edit</a>
							<form class="col s6" action="/admin/projects/<%= project._id %>?_method=DELETE" method="POST">
								<button type="submit" class="waves-effect waves-light btn red accent-4">Delete</button>
							</form>
						</div>
					</li>
				<% }) %>
			</ul>
	      </div>
	    </div>
	  </div>
	</div>
</div>
<div class="row" id="add-buttons">
	<div class="col s6">
		<a href="/admin/skills/new" class="waves-effect waves-light btn green darken-3"><i class="material-icons left">add</i>Add Skill</a>
	</div>
	<div class="col s6">
		<a href="/admin/projects/new" class="waves-effect waves-light btn green darken-3"><i class="material-icons left">add</i>Add Project</a>
	</div>
</div>


<% include ../partials/footer %>